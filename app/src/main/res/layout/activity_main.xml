<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="prueba.app.llerena.steven.com.localizacionmovil.MainActivity">




    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/signo"
        android:clickable="true"
        android:onClick="Click_Imagen"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
    />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="SISTEMA DE"
        android:textAlignment="center"
        android:id="@+id/titulo2"
        android:textSize="30dp"
        android:textColor="@color/Rojo"
    />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="LOCALIZACIÓN MÓVIL"
        android:textAlignment="center"
        android:id="@+id/titulo"
        android:textSize="30dp"
        android:layout_below="@id/titulo2"
        android:textColor="@color/Rojo"
    />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="URL:"
        android:id="@+id/texturl"
        android:textSize="30dp"
        android:layout_below="@id/titulo"
        android:layout_marginTop="50dp"
        android:textColor="@color/Negro"
    />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="http://ticollcloud.ddns.net/AWS/Android_Coordenadas.php"
        android:id="@+id/editurl"
        android:textSize="14dp"
        android:layout_marginTop="40dp"
        android:layout_below="@id/titulo"
        android:layout_toRightOf="@+id/texturl"
        android:layout_toEndOf="@+id/texturl"
    />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tiempo:"
        android:id="@+id/text1"
        android:textSize="30dp"
        android:layout_below="@id/texturl"
        android:layout_marginTop="20dp"
        android:textColor="@color/Negro"
    />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Digite Tiempo (seg)"
        android:layout_toRightOf="@+id/text1"
        android:layout_marginLeft="20px"
        android:id="@+id/tiempo"
        android:layout_below="@id/texturl"
        android:layout_marginTop="20dp"
        android:text="0"
    />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Distancia:"
        android:id="@+id/text2"
        android:layout_below="@+id/text1"
        android:textSize="30dp"
        android:layout_marginTop="20dp"
        android:textColor="@color/Negro"
    />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Digite distancia (mts)"
        android:layout_below="@+id/text1"
        android:layout_toRightOf="@+id/text2"
        android:layout_marginLeft="20px"
        android:id="@+id/distancia"
        android:layout_marginTop="20dp"
        android:text="0"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ID:"
        android:id="@+id/text3"
        android:textSize="30dp"
        android:layout_below="@+id/text2"
        android:layout_marginTop="20dp"
        android:textColor="@color/Negro"

        />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Steven"
        android:layout_toRightOf="@+id/text3"
        android:layout_marginLeft="20px"
        android:layout_below="@+id/text2"
        android:id="@+id/id_vehiculo"
        android:layout_marginTop="20dp"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Activar Gps"
        android:id="@+id/botonactivar"
        android:onClick="ActivarSistema"
        android:layout_below="@id/text3"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="50dp"

        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Desactivar Gps"
        android:id="@+id/botonadesactivar"
        android:onClick="DesactivarSistema"
        android:layout_toRightOf="@+id/botonactivar"
        android:layout_below="@id/text3"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="50dp"
        />



    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="SISTEMA DESACTIVADO"
        android:id="@+id/estado"
        android:textColorHighlight="@color/colorPrimary"
        android:textColor="@color/Blanco"
        android:background="@color/Rojo"
        android:textSize="25dp"
        android:layout_below="@+id/botonactivar"
        android:layout_marginTop="80px"
        android:layout_centerHorizontal="true"
        android:textAlignment="center"
        />


</RelativeLayout>
